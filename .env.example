# Polymarket Trading Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: Wallet Configuration
# =============================================================================
PRIVATE_KEY=0xYourPrivateKeyHere

# =============================================================================
# API Configuration
# =============================================================================
CLOB_API_URL=https://clob.polymarket.com
POLYGON_CHAIN_ID=137
RPC_URL=https://polygon-rpc.com

# =============================================================================
# Trading Parameters
# =============================================================================
# Minimum price difference to trigger a trade (in dollars)
PRICE_DIFFERENCE_THRESHOLD=0.015

# Stop loss amount below buy price (in dollars)
STOP_LOSS_AMOUNT=0.005

# Take profit amount above buy price (in dollars)
TAKE_PROFIT_AMOUNT=0.01

# Amount in USDC per trade
DEFAULT_TRADE_AMOUNT=5.0

# Cooldown between trades (in seconds)
TRADE_COOLDOWN=30

# Minimum USDC balance required to trade
MINIMUM_BALANCE=500.0

# Minimum MATIC balance for gas fees
MINIMUM_GAS=0.05

# =============================================================================
# Monitoring Intervals (in seconds)
# =============================================================================
# How often to check wallet balance
BALANCE_CHECK_INTERVAL=60

# How often to clean up old trades from memory
TRADE_CLEANUP_INTERVAL=300

# Maximum age of trades before cleanup (in seconds)
MAX_TRADE_AGE=3600

# =============================================================================
# Rate Limiting
# =============================================================================
# Minimum interval between API calls (in milliseconds)
API_MIN_INTERVAL_MS=100

# Maximum retry attempts for failed API calls
API_MAX_RETRIES=4

# Base delay for exponential backoff (in milliseconds)
API_BASE_DELAY_MS=1000

# Maximum delay for exponential backoff (in milliseconds)
API_MAX_DELAY_MS=16000

# =============================================================================
# Liquidity & Risk Controls
# =============================================================================
# Maximum allowed slippage (1% = 0.01)
MAX_SLIPPAGE=0.01

# Minimum liquidity multiplier (need 2x trade amount available)
MIN_LIQUIDITY_MULTIPLIER=2.0

# Maximum bid-ask spread percentage
MAX_SPREAD_PERCENT=3.0

# Price data considered stale after this many milliseconds
PRICE_STALE_MS=10000

# Enable dynamic position sizing based on confidence
ENABLE_DYNAMIC_SIZING=false

# Order monitoring interval (seconds)
ORDER_MONITOR_INTERVAL=5

# =============================================================================
# Data Feeds
# =============================================================================
# Software oracle WebSocket URL
# WARNING: ws:// is unencrypted. Use wss:// if available for security.
SOFTWARE_WS_URL=ws://45.130.166.119:5001

# =============================================================================
# Logging
# =============================================================================
# Log level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
